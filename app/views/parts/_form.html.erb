<%= simple_form_for [@project, @part], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :assembly_id %>
  <%= f.input :drawing_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                project_parts_path, :class => 'btn' %>
  </div>
<% end %>
