<%- model_class = Drawing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @drawing.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project) %>:</strong></dt>
  <dd><%= @drawing.project %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @drawing.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:series) %>:</strong></dt>
  <dd><%= @drawing.series %></dd>
  <dt><strong><%= model_class.human_attribute_name(:revision) %>:</strong></dt>
  <dd><%= @drawing.revision %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attachment_file_name) %>:</strong></dt>
  <dd><%= @drawing.attachment_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attachment_content_type) %>:</strong></dt>
  <dd><%= @drawing.attachment_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attachment_file_size) %>:</strong></dt>
  <dd><%= @drawing.attachment_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attachment_updated_at) %>:</strong></dt>
  <dd><%= @drawing.attachment_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_id) %>:</strong></dt>
  <dd><%= @drawing.project_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              project_drawings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_drawing_path(@project, @drawing), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_drawing_path(@project, @drawing),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
